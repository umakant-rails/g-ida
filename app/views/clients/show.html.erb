<div class="row-fluid">
  <div class="span4"></div>
  <div class="span8"><h4>Client Public Profile</h4></div>
</div>
<div class="border"></div>
<div class="row-fluid">
  <div class="span10">
    <div class="tabbable tabs-left">
      <ul class="nav nav-tabs" style="height: 500px; background-color: rgb(244, 244, 244);">
        <li class="active"><a href="#user_info" data-toggle="tab">User Infomation</a></li>
        <li><a href="#user_activity" data-toggle="tab">Activity</a></li>
      </ul>
      <div class="tab-content">
        <br/>
        <div class="tab-pane active" id="user_info">
          <%= form_for(@client, :as => @client.class.name.downcase, :url => registration_path(@client.class.name.downcase)) do |f| %>
            <%= render partial: "clients/user_info", locals: {f: f, is_disabled: true}%>
          <% end %>
          <div class="clearboth"></div>
        </div>
        <div class="tab-pane fade" id="user_activity">
          <img src="/assets/work_progress.jpeg" width="800px" height="500px" alt="Development is in Progress."/>
        </div>
      </div>
    </div>
  </div> 
</div>
