<div class="login-container">
  <div class="middle-login">
		<div class="block-flat">
			<div class="header">
				<h3 class="text-center">Sign in</h3>
			</div>
			<div>
				<!--<form action="index.html" class="form-horizontal" style="margin-bottom: 0px !important;">-->
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),
          :html => {:class => "form-horizontal", :style => "margin-bottom: 0px !important;"}) do |f| %>
					<div class="content">
						<h4 class="title">Login Access</h4>
            <div class="form-group">
              <div class="col-sm-12">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                  <%= f.email_field :email, autofocus: true, class: "form-control", id: "email",
                    placeholder: "Email" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                  <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Password" %>
                </div>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <div class="col-sm-12">
                  <div class="input-group">
                    <%= f.check_box :remember_me, style: "margin-top: -2px;" %> Remember me
                  </div>
                </div>
              </div>
            <% end %>
					</div>
					<div class="foot">
						<%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-default",
              style: "color:#333333 !important;" %>
            <%= f.submit "Sign in", class: "btn btn-primary", style: "padding: 7px 30px;" %>
					</div>
				<% end %>
			</div>
		</div>
		<div class="text-center out-links"><a href="#">&copy; 2015@Evoting</a></div>
	</div>
</div>
