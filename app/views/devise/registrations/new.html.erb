<div class="sign_up_top_mrgn"></div>
<div class="row">
  <div class="span2"></div>
  <div class="span8">
    <% if resource.errors.present? %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <ul style="list-style-type:none">
          <% resource.errors.messages.each do |key, values| %>
            <%
              msg = '';
              values.each{ |val| msg = msg + key.to_s + ' '+ val + '</br>' }
            %>
            <li><%= msg.html_safe   %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="span2"></div>
</div>
<div class="row">
  <div class="span3"></div>
  <div class="span6">
    <div class="panel panel-default">
      <div class="panel-heading">Sign up</div>
      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <div class="row-fluid">
            <div class="span3">Role</div>
            <% user_roles = Hash[@roles.map{|role| [role.name, role.id]}] %>
            <div class="span9">
              <input type="hidden" name="user[role_id]" value="2" >
              <%= f.select :role_id, options_for_select(user_roles, 2), {:prompt => "Select Role",
                :autofocus => true }, :disabled => true %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :username %></div>
            <div class="span9">
              <%= f.text_field :username %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :email %></div>
            <div class="span9">
              <%= f.text_field :email %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :password %></div>
            <div class="span9"><%= f.password_field :password %></div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :password_confirmation %></div>
            <div class="span9"><%= f.password_field :password_confirmation %></div>
          </div>
          <div class="row-fluid">
            <% if devise_mapping.rememberable? -%>
              <div class="span3"></div>
              <div class="span9"><%= f.check_box :remember_me, style: "margin-top: -2px;" %> Remember me</div>
            <% end -%>
          </div>
          <div class="row-fluid">
            <div class="span3"></div>
            <div class="span9"><%= f.submit "Sign up", class: "btn btn-primary", style: "padding: 7px 30px;" %></div>
          </div>
        <% end %>
        <div class="row-fluid">
          <div class="span3"></div>
          <div class="span9"><%= render "devise/shared/links" %></div>
        </div>
      </div>
    </div>
  </div>
  <div class="span3"></div>
</div>
