<div class="sign_in_top_mrgn"></div>
<div class="row">
  <div class="span3"></div>
  <div class="span6">
    <div class="panel panel-default">
      <div class="panel-heading">Forgot your password?</div>
      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
          <div class="row-fluid">
            <div class="span3"><%= f.label :email %></div>
            <div class="span9"><%= f.email_field :email, :autofocus => true %></div>
          </div>
          <div class="row-fluid">
            <div class="span3"></div>                       
            <div class="span9"><%= f.submit "Submit", class: "btn btn-primary", style: "padding: 7px 30px;" %></div>
          </div>
        <% end %>
        <div class="row-fluid">
          <div class="span3"></div>
          <div class="span9"><%= render "devise/shared/links" %></div>
        </div>
      </div>
    </div>
  </div>
  <div class="span3"></div>
</div>
