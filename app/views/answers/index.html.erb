<div class="page-head">
  <h2>Listing answers</h2>
</div>
<div class="cl-mcont">
  <div class="block-flat">
    <div class="content">
      <table >
        <thead>
          <tr>
            <th><strong>Answer</strong></th>
            <th><strong>Poll</strong></th>
            <th class="action"><strong>Action</strong></th>
          </tr>
        </thead>
        <tbody>
          <% if @answers.present? %>
            <% @answers.each do |answer| %>
              <tr>
                <td><%= answer.answer %></td>
                <td><%= answer.poll.title %></td>
                <td>
                  <%= link_to 'Show', answer, class: "btn btn-primary" %>
                  <%= link_to 'Edit', edit_answer_path(answer), class: "btn btn-primary" %>
                  <%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' },
                    class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5"><center>There is no answers available.</center></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
