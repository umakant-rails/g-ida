<div class="page-head">
  <h2>Answer Details</h2>
</div>
<div class="cl-mcont">
  <div class="row">
    <div class="col-lg-12 pull-left">
      <div class="block-flat">
        <div class="form-group">
          <label for="nick" class="col-sm-2 control-label">Answer : </label>
          <div class="col-sm-9">
            <%= @answer.answer %>
          </div>
        </div>
        <div class="clear"></div>
        <div class="form-group">
          <label for="nick" class="col-sm-2 control-label">Question : </label>
          <div class="col-sm-9">
            <%= @answer.poll.title %>
          </div>
        </div>
        <div class="clear"></div>
      </div>
      <%= link_to 'Edit', edit_answer_path(@answer), class: "btn btn-primary" %>
      <%= link_to 'Back', answers_path, class: "btn btn-primary"  %>
    </div>
  </div>
</div>
